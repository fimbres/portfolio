---
import { Image } from 'astro:assets';

import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';

import Logo from 'public/favicon.svg'
---

<Layout title="Isaac Fimbres | Not Found">
	<main class="max-w-5xl mx-auto px-5">
		<section class="flex flex-col justify-center items-center h-[calc(100vh-300px)]">
			<Image src={Logo} alt='Logo' width={100} height={100} />
			<h1 class="text-xl sm:text-4xl mt-7 font-medium text-center">Page Not Found!</h1>
      <p class="md:text-lg mb-6 mt-3 font-light text-center">The page you're looking for is not available right now.</p>
      <a href="/">
        <Button variant="primary">Return To Home</Button>
      </a>
		</section>
	</main>
</Layout>
